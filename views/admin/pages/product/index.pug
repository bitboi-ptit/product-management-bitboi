extends ../../layouts/default.pug
include ../../mixins/filter-Status.pug
include ../../mixins/search.pug
include ../../mixins/pagination.pug
include ../../mixins/form-change-multi.pug
include ../../mixins/alert.pug
include ../../mixins/sort.pug
include ../../mixins/moment.pug
block main 
    if(role.permission.includes("products_view"))
        h1 Trang Danh sách sản phẩm
        +alert-success(5000)
        .card.mb-3  
            .card-header Bộ lọc và Tìm kiếm 
            .card-body  
                .row 
                    .col-6
                        +filter-Status(filterStatus)
                    .col-6 
                        +search(keyword)    
        .card.mb-3  
            .card-header Sắp xếp
            .card-body  
                .row  
                    .col-4      
                    +sort()
                            
            
        .card.mb-3  
            .card-header Danh sách
            .card-body
                .row 
                    .col-8 
                        if(role.permission.includes("products_edit"))
                            +form-change-multi(`${prefixAdmin}/products/change-multi?_method=PATCH`)
                    .col-4   
                        if(role.permission.includes("products_create"))
                            a(href=`${prefixAdmin}/products/create`
                            class="btn btn-outline-success"
                            ) + Thêm mới 
                table(
                    class="table table-hover table-sm "
                    checkbox-multi
                    )
                    thead 
                        tr 
                            th 
                                input(type="checkbox" name="checkall")
                            th STT 
                            th Hình ảnh 
                            th Tiêu đề
                            th Giá
                            th Vị trí
                            th Người tạo
                            th Trạng thái 
                            th Hành Động 
                    tbody 
                    each item, index in products
                        tr 
                            td 
                                input(
                                    type="checkbox"
                                    name="id"
                                    value= item.id
                                )
                            td #{(index+1)+(pagination.currentPage-1)*pagination.limitItems}
                            td  
                                img(src=item.thumbnail
                                alt= item.title
                                width="100px"
                                height = "auto"
                                )
                            td #{item.title}
                            td #{item.price}$
                            td 
                                input(
                                    type="number"   
                                    value=item.position
                                    style="width: 60px"
                                    min="1"
                                    name="position"
                                )
                            td 
                                p #{item.accoutFullName}
                                p
                                    +formatDateTime(item.createdBy.createdAt)
                            td 
                                if(role.permission.includes("products_edit"))
                                    if(item.status=="active")
                                        a(href="javascript:;" 
                                        data-id=item.id  
                                        data-status=item.status 
                                        button-change-status
                                        class="badge text-bg-success text-decoration-none"
                                    
                                        ) #{item.status} 
                                    else 
                                        a(href="javascript:;" 
                                        data-id=item.id  
                                        data-status=item.status 
                                        button-change-status
                                        class="badge text-bg-danger text-decoration-none"
                                        ) #{item.status}                                
                            td 
                                a(
                                href=`${prefixAdmin}/products/detail/${item.id}`
                                class="btn btn-secondary btn-sm"
                                ) Chi tiết
                                if(role.permission.includes("products_view_edit"))
                                    a(
                                        href=`${prefixAdmin}/products/edit/${item.id}`
                                        class="btn btn-warning btn-sm ms-1"
                                        ) Sửa
                                if(role.permission.includes("products_view_delete"))
                                    button(
                                        class="btn btn-danger btn-sm ms-1"
                                        button-delete
                                        data-id=item.id
                                    ) Xóa 
        +pagination(pagination)
        form(
            action=""
            method="POST"
            id="form-change-status"
            data-path=`${prefixAdmin}/products/change-status`
        )

        form(
            action=""
            method="POST"
            id="form-delete-item"
            data-path=`${prefixAdmin}/products/delete`
        )
        script(src="/admin/js/product.js")
     
     
  

            