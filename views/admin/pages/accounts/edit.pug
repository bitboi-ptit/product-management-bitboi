extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main
    h1(class="mb-4") Chỉnh sửa tài khoản
    +alert-error(5000)
    +alert-success(5000)
    if(roles)
        form(
        action=`${prefixAdmin}/accounts/edit/${data.id}?_method=PATCH`
        method="POST"
        enctype="multipart/form-data"
        )
            div(class="form-group")
                label(for="fullName") Họ tên *
                input(
                type="text"
                class="form-control"
                id="fullName"
                name="fullName"
                required
                value=data.fullName 
            )
            div(class="form-group")
                label(for="email") Email *
                input(
                type="email"
                class="form-control"
                id="email"
                name="email"
                required
                value= data.email
            )
            div(class="form-group")
                label(for="password") Mật khẩu *
                input(
                type="password"
                class="form-control"
                id="password"
                name="password"
                
            )
            div(class="form-group")
                label(for="phone") Số điện thoại
                input(
                type="text"
                class="form-control"
                id="phone"
                name="phone"
                required
                value=data.phone
            )
            div(
                class="form-group"
                upload-image
            )
                label(
                    for="thumbnail"
                ) Avatar
                input(
                    type="file"
                    class="form-control"
                    id="avatar"
                    name="avatar"
                    accept="image/*"
                    upload-image-input
                )
                img(
                    src=`${data.avatar}`
                    class="image-preview"
                    upload-image-preview
                )
            div(class="form-group")
                lable(for="role_id") Phân quyền 
                select(
                    name="role_id" 
                    id="role_id" 
                    class="form-control" 
                    )
                    option(value="") ---Chọn--- 
                    if(roles)
                        each item in roles 
                            option(
                                value=item._id
                                selected=(data.role_id==item._id?true:false)
                            ) #{item.title} 
            div(class="form-group form-check form-check-inline")
                input(
                    type="radio"
                    class="form-check-input"
                    id="statusActive"
                    name="status"
                    value="active"
                    checked=(data.status=="active"?true:false)
                )
                label(for="statusActive" class="form-label") Hoạt động
            div(class="form-group form-check form-check-inline")
                input(
                    type="radio"
                    class="form-check-input"
                    id="statusInActive"
                    name="status"
                    value="inactive"
                    checked=(data.status=="inactive"?true:false)
                )
                label(for="statusInActive" class="form-label") Dừng hoạt động
                
            div(class="form-group")
                button(
                    type="submit"
                    class="btn btn-primary"
                ) Cập nhật
    else 
        div(class="form-group")
            p Chưa có role nào vui lòng tạo role trước khi tạo tài khoản !!
            a(
                href=`${prefixAdmin}/accounts/create`
                class="btn btn-outline-success"
            ) + Thêm mới