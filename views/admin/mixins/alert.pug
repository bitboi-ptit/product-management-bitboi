mixin alert-success(time)
    - if (messages.success)
        .message.info
            div(
                class="alert alert-success alert-dismissible "
                show-alert 
                data-time=time
            ) #{messages.success} 
                button(class="btn-close" close-alert)

mixin alert-error(time)
    - if (messages.error)
        .message.info
            div(
                class="alert alert-danger alert-dismissible "
                show-alert 
                data-time=time
            ) #{messages.error} 
                button(class="btn-close" close-alert)